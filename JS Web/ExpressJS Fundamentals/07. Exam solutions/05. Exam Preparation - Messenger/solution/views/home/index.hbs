<h1>Welcome to Messenger</h1>

{{#if user}}
<form action="/thread/find" method="post" class="form center-form">
    <div class="form-group">
        <input name="username" placeholder="username" class="input-field search" />
        <button class="btn btn-search">Search</button>
    </div>
</form>
{{/if}}

{{#if isAdmin}}
<h1>Threads</h1>
<div class="threads-list">

    {{#each threads}}
    <div class="thread">
        <form action="/thread/delete/{{this._id}}" method="POST">
            <h4>{{this.users}}</h4>
            <p>{{this.date}} (FLE Standard Time)</p>
            <button class="btn">Delete</button>
        </form>
    </div>
    {{/each}}

</div>
{{/if}}