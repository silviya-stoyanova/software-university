<form method="POST" action="/course/{{courseId}}/lecture/create" class="text-center border border-light p-5">
    <h1>Add lecture to course {{courseTitle}}</h1>

    <div class="form-group">
        <label for="title">Lecture Title</label>
        <input name="title" value="{{title}}" type="text" class="form-control" placeholder="Lecture title">
    </div>
    <div class="form-group">
        <label for="videoUrl">Video Url</label>
        <input name="videoUrl" value="{{videoUrl}}" type="text" class="form-control" placeholder="Video Url">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h2 class="text-center">There are {{lectures.length}} lectures in this course</h2>

<ul class="list-group">
    {{#each lectures}}
    <li class="list-group-item">
        <h5 class="mb-1">{{title}}</h5>
        <span class="float-right">
            <a href="/course/{{../courseId}}/lecture/delete/{{_id}}"><button class="btn btn-danger">Delete</button></a>
        </span>
    </li>
    {{/each}}
</ul>