<h1>Welcome to SoftUni Wiki!</h1>
<div class="spacer">
    <h2>{{title}}
        <div class="controls">
            {{#if user}}


            {{#if locked}}

            {{#if isAdmin}}
            <a href="/item/edit/{{_id}}">[edit]</a>
            {{/if}}

            {{else}}
            <a href="/item/edit/{{_id}}">[edit]</a>

            {{/if}}


            <a href="/item/history/{{_id}}">[history]</a>
            {{/if}}
        </div>
    </h2>
    <article>
        <p> {{edits.content}} </p>
    </article>
</div>