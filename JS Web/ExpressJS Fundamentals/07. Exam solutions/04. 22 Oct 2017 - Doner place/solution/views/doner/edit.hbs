<form action="/doner/edit/{{_id}}" method="post">
    <h2>Edit Product</h2>
    <div>
        <label for="category">Category</label>
        <select autofocus name="category" id="category">
            <option {{categories.isBeef}} value="beef">Beef</option>
            <option {{categories.isChicken}} value="chicken">Chicken</option>
            <option {{categories.isLamb}} value="lamb">Lamb</option>
        </select>
    </div>
    <div>
        <label for="imageUrl">Image Url</label>
        <input value="{{imageUrl}}" id="imageUrl" name="imageUrl" type="text">
    </div>
    <div>
        <label for="size">Size</label>
        <input value="{{size}}" id="size" name="size" type="number">
    </div>
    <div>
        <strong>Toppings</strong><br>
        <textarea name="toppings">{{toppings}}</textarea>
    </div>
    <div>
        <input type="submit" value="Edit" class="button" style="border:0" />
    </div>
</form>