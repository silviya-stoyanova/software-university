<section id="viewCatalog" class="background-img">
    <a href="#/items/create" class="add-flight">Add Flight +</a>

    <div class="added-flights">

        {{#each items}}
        <a href="#/items/details/:{{_id}}" class="added-flight">
            <img src="{{img}}" alt="{{destination}}" class="picture-added-flight">
            <h3>{{destination}}</h3>
            <span>from Sheffield</span><span>{{departureDate}}</span>
        </a>
        {{/each}}

    </div>
</section>